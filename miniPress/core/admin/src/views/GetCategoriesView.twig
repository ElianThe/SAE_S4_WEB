{% extends "miniPress.skeleton.twig" %}

{% block title %}Liste des catégories{% endblock %}

{% block minipress %}
    <div class="d-flex justify-content-between align-items-center mt-4">
        <h1>Liste des catégories</h1>
        <a href="{{ url_for('createCategorie') }}" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Ajouter une catégorie</a>
    </div>
    <div class="row mt-4">
        {% for categ in categories %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title text-center">{{ categ.name }}</h5>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
